            %>

            <%
            var locations = [];

            for(var i = 0; i < empresas_prueba.length; ++i){
                locations.push(empresas_prueba[i].nombre_localizacion, empresas_prueba[i].coordenadas_longitud_placa, empresas_prueba[i].coordenadas_latitud_placa);
