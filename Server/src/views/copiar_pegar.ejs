                var map = L.map('map').setView([41.39238915483426, 2.1621599834744623], 11);
                mapLink =
                    '<a href="http://openstreetmap.org">OpenStreetMap</a>';
                L.tileLayer(
                    'http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '&copy; ' + mapLink + ' Contributors',
                        maxZoom: 18,
                    }).addTo(map);

                for (var i = 0; i < localizaciones.length; i+=3) {

                    marker = new L.marker([localizaciones[i+1], localizaciones[i+2]])
                        .bindPopup(localizaciones[i] + "<br /> " + '<a href="consulta_placa">Ver Info </a>')
                        .addTo(map)
                        .openPopup()
                }

